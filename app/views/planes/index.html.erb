<h1>Listing planes</h1>

<table>
  <tr>
    <th>Type</th>
    <th>In service since</th>
    <th>Last service</th>
    <th>Seats</th>
    <th>Luxury</th>
    <th>Incidents</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @planes.each do |plane| %>
  <tr>
    <td><%= plane.type %></td>
    <td><%= plane.in_service_since %></td>
    <td><%= plane.last_service %></td>
    <td><%= plane.seats %></td>
    <td><%= plane.luxury %></td>
    <td><%= plane.incidents %></td>
    <td><%= link_to 'Show', plane %></td>
    <td><%= link_to 'Edit', edit_plane_path(plane) %></td>
    <td><%= link_to 'Destroy', plane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

