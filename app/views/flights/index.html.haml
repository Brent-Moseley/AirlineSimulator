   %table{class: "table table-striped"}
      %thead
         %tr
            %th
               From
            %th
               To
            %th
               Leaves
            %th
               Arrives
            %th
               Full?
            %th
               Price
      %tbody
      - @flights.each do |flight|
         %tr{"data-toggle" => "collapse", "data-target" => ".legs#{flight.id}"}
            %td=flight.from
            %td=flight.to
            %td=flight.leaves.strftime('%b %e, %l:%M %p')
            %td=flight.arrives.strftime('%b %e, %l:%M %p')
            %td=flight.full
