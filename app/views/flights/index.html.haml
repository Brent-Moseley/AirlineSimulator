#main_container
   #nav_container
      // = link_to "text", "#"
      = link_to image_tag("airline2.jpg", size: "100x100", alt: "Airline Icon", id: "first_icon", class: "nav_icon"), "http://yahoo.com"
      = link_to image_tag("airport.jpg", size: "100x100", alt: "Airport Icon", class: "nav_icon"), "http://yahoo.com"
      = link_to image_tag("livemap.jpg", size: "100x100", alt: "Edit Entry", class: "nav_icon"), "http://yahoo.com"
      //%br
      .nav_icon_label
         Airlines  
      .nav_icon_label
         Airports  
      .nav_icon_label
         Real Time Map  

   %br
   %h1
      Flights
   
   %table{class: "header table table-striped"}
      %thead
         %tr
            %th
               Flight
            %th
               Times
            %th
               Seats Available?
            %th
               Price
      %tbody
      - @flights.each do |flight|
         %tr{:class => "bold", "data-toggle" => "collapse", "data-target" => ".legs#{flight.id}"}
            %td="#{flight.from} to #{flight.to}"
            /%td=flight.to
            %td
               ="Takeoff: #{flight.leaves.strftime('%b %e, %l:%M %p')}"
               %br
               ="Arrival: #{flight.arrives.strftime('%b %e, %l:%M %p')}"
               %hr{:style => "margin: 3px"}
               -flight.legs.each.with_index do |leg, i|
                  .normal
                     - if flight.legs.all.length > 1
                        ="#{i+1}. #{leg.from} to #{leg.to}, #{leg.full ? 'closed' : 'open'}"
                     - else   
                        ="#{leg.from} to #{leg.to}, #{leg.full ? 'closed' : 'open'}"
                  /%br

            %td{:style => "padding-left: 60px"}
               =!flight.full
            %td
               $125.00
